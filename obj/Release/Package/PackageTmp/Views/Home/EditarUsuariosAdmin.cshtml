@model ReportesUdec.Models.Usuario
@using ReportesUdec.Traducciones
@{
    ViewBag.Title = "EditarUsuariosAdmin";
    var msj = ViewBag.msj;
}
@using (Html.BeginForm("EditarUsuariosAdmin", "Home", FormMethod.Post))
{
    <br />
    <h4>Editar información de usuarios</h4>
    <h4 style="color:green">
        @ViewBag.msj
    </h4>
    <hr />
    @Html.HiddenFor(model => model.Usuario_Id)
    <div class="form-group row">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "txt-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-sm-2">
            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Rol_Id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-sm-2">
            <select class="form-control" name="ddlRoles" id="ddlRoles" required>
                <option value="">--Seleccione--</option>
                <option value="2">Aseo</option>
                <option value="3">Reparación</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <input type="submit" value="@textos.Editar" class="btn btn-success" />
        </div>
    </div>
}

<div class="form-group row">
    <div class="col-md-10">
        @Html.ActionLink("Volver", "Administrador", new { @class = "btn btn-success" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



