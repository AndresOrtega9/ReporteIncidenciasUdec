@using ReportesUdec.Traducciones
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="form-group">
    @Html.AntiForgeryToken()
    <h4>@textos.Acceso</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form action="@Url.Content("~/Acceso/Login")" method="post">
        <div class="form-group row">
            <div class="col-md-10">
                <label>@textos.Usuario</label>
                <input type="email" name="user" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10">
                <label>@textos.Contraseña</label>
                <input type="password" name="pass" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10">
                <input type="submit" value="@textos.Entrar" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group row" style="color:forestgreen">
            <div class="col-md-10">
                @Html.ActionLink(textos.Recuperar + " " + textos.Contraseña, "InicioRecuperacion")
            </div>
        </div>
    </form>
</div>
<div style="color:green" class="form-group row">
    <div class="col-md-10">
        @ViewBag.Message
    </div>
</div>
<div style="color:red" class="form-group row">
    <div class="col-md-10">
        @ViewBag.Error
    </div>
</div>


